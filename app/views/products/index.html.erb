<div class="section">
<h1>Products</h1>

<table class="border" cellpadding=5 align=center>
  <thead>
    <tr class="text-light bg-dark"><th>Add to Your List</th>
      <th>SKU</th>
      <th>Product Name</th>
      <th>Department</th>
      <th>Quantity</th>
      <th colspan="3">Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr><td class="border"><%= button_to 'Add', :controller => :lists, :action => :duplicate %></td>
        <td class="border"><%= link_to product.sku, product %></td>
        <td class="border"><%= product.name %></td>
        <td class="border"><%= product.dept %></td>
        <td class="border"><%= product.quantity %></td>
        <td class="border"><%= button_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>
<div class="text-center"><%= button_to 'New Product', new_product_path %></div>
<br>
