<!DOCTYPE html>
<html>
  <head>
    <title>Hack2Help</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-sm navbar-dark" style="background-color:#fa6304;">
  <ul class="navbar-nav">
    <li class="nav-item active">
      <a class="nav-link">The Home Depot </a>
    </li>
    <li class="nav-item">
        <span class="nav-link"><%= link_to "Predictions", products_url %></span>
    </li>
    <li class="nav-item">
      <span class="nav-link"><%= link_to "Your List", lists_path %></span>
    </li>
    <li class="nav-item">
      <a class="nav-link disabled" href="#">Sign Out</a>
    </li>
  </ul>
</nav>

    <div class="container">
      <section class="text-dark">
        <%= yield %>

      </section>
    </div>
  </body>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

</html>
